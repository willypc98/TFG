# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~
 
# APIs in EmployeeController
GET     /employee              controllers.EmployeeController.listEmployees()
GET     /employee/:id          controllers.EmployeeController.retrieve(id:Int)
POST    /employee              controllers.EmployeeController.create(request:Request)
PUT     /employee              controllers.EmployeeController.update(request:Request)
DELETE  /employee/:id          controllers.EmployeeController.delete(id:Int)

GET     /usuarios              controllers.UsuarioController.listUsuarios()
GET     /usuarios/:id          controllers.UsuarioController.retrieve(id:Int)
POST    /usuarios              controllers.UsuarioController.create(request:Request)
PUT     /usuarios/:id          controllers.UsuarioController.update(request:Request,id:Int)
DELETE  /usuarios/:id          controllers.UsuarioController.delete(id:Int)

GET     /laboratorios          controllers.LaboratorioController.listLaboratorios()
GET     /laboratorios/:id      controllers.LaboratorioController.retrieve(id:Int)
POST    /laboratorios          controllers.LaboratorioController.create(request:Request)
PUT     /laboratorios/:id      controllers.LaboratorioController.update(request:Request,id:Int)
DELETE  /laboratorios/:id      controllers.LaboratorioController.delete(id:Int)

GET     /bancos                controllers.BancoDeTrabajoController.listBancosDeTrabajo()
GET     /bancos/:id            controllers.BancoDeTrabajoController.retrieve(id:Int)
POST    /bancos                controllers.BancoDeTrabajoController.create(request:Request)
PUT     /bancos/:id            controllers.BancoDeTrabajoController.update(request:Request,id:Int)
DELETE  /bancos/:id            controllers.BancoDeTrabajoController.delete(id:Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)